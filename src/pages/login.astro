---
import Layout from '../layouts/common.astro';
---

<Layout title="Login">
  <form
    class="mx-auto max-w-md space-y-6 bg-white py-8 px-10 rounded-lg shadow"
    action="#"
    method="POST"
  >
    <div>
      <label for="email" class="block text-sm font-medium text-gray-700"
        >Email address</label
      >
      <div class="mt-1">
        <input
          id="email"
          type="email"
          name="email"
          required
          class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm"
        />
      </div>
      <div class="pt-2">
        <input
          type="password"
          id="password"
          name="password"
          required
          class="block border w-full border-gray-300 px-3 py-2 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm"
        />
      </div>
    </div>
    <div>
      <input
        type="submit"
        value="Sign in"
        class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
      />
    </div>
  </form>
</Layout>
